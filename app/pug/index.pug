                li.sidebar-nav-item
                    a.js-scroll-trigger(href="#Map") Map
        // Header
        div#landing.full-section.centre-y
            div.container.text-center
                img(src="img/logo.svg")
        //Design
        section#design.bg-white.text-black.text-center.centre-y 
            .container
                .row
                    .col-md-4.mb-5.mb-lg-5
                        img.mb-5.design-icon(src="img/icons/mep.svg")
                    .col-md-4.mb-5.mb-lg-5
                        img.mb-5.design-icon(src="img/icons/hs.svg")
                    .col-md-4.mb-5.mb-lg-5
                        img.mb-5.design-icon(src="img/icons/im.svg")
                    .col-md-4.mb-5.mb-lg-1
                        img.design-icon(src="img/icons/bw.svg")
                    .col-md-4.mb-lg-5
                        img.design-icon(src="img/icons/vl.svg")
                    .col-md-4.mb-lg-5
                        img.design-icon(src="img/icons/dogma.svg")
        //Showcase
        .double-page-section#showcase
            .double-page-parent
                .double-page-child.db-left.centre-y
                    .double-page-container#henri-preview.p-3
                        h4.w-50.z-top Featured on the custom bike of Olympic Medalist, Henri Schoeman
                        btn#btnViewProject.btn.btn-primary.z-top View Project
                .double-page-child.db-right.centre-y
                    .double-page-container#henri-details
                        #demo.carousel.slide.h-100(data-ride='carousel')
                            // Indicators
                            ul.carousel-indicators
                                li.active(data-target='#demo', data-slide-to='0')
                                li(data-target='#demo', data-slide-to='1')
                                li(data-target='#demo', data-slide-to='2')
                            // The slideshow
                            .carousel-inner.h-100
                                #item1.carousel-item.h-100.active
                                #item2.carousel-item.h-100
                                #item3.carousel-item.h-100
                            // Left and right controls
                            a.carousel-control-prev(href='#demo', data-slide='prev')
                                span.carousel-control-prev-icon
                            a.carousel-control-next(href='#demo', data-slide='next')
                                span.carousel-control-next-icon
                        //p.info-tag scroll to close
        //Web
        section#web.bg-white.text-black.centre-xy
            .container
                .row
                    .col-md-12
                        span.pull-right.pb-5 
                            h3.d-inline WEB | 
                            a.d-inline(href="")
                                h3.d-inline mobile first
                .row
                    .col-md-4.mb-5.mb-md-0
                        .flip-container

    body#page-top
        // Navigation
        a.menu-toggle.rounded(href="#")
            i.fa.fa-bars
        nav#sidebar-wrapper
            ul.sidebar-nav
                li.sidebar-brand
                    a.js-scroll-trigger(href="#page-top") Tourmalet
                li.sidebar-nav-item

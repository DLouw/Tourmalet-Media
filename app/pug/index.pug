        link(rel="icon", href="img/favicon.png")
    body#page-top
        // Navigation
        a.menu-toggle.rounded(href="#")
            i.fa.fa-bars
        nav#sidebar-wrapper
            ul.sidebar-nav
                li.sidebar-brand
                    a.js-scroll-trigger(href="#page-top") Tourmalet
                li.sidebar-nav-item
                    a.js-scroll-trigger(href="#landing") Home
                li.sidebar-nav-item
                    a.js-scroll-trigger(href="#Design") Design
                li.sidebar-nav-item
                    a.js-scroll-trigger(href="#showcase") Projects
                li.sidebar-nav-item
                    a.js-scroll-trigger(href="#contact") Contact
        // Header
        #landing.full-section.centre-y
            div.container.text-center
                img.logo.mb-5(src="img/logo.svg")
                .btn-group.d-block
                    a.btn.btn-secondary.js-scroll-trigger(href="#intro" onclick="translatePage('en')") English
                    a.btn.btn-secondary.js-scroll-trigger(href="#intro" onclick="translatePage('fr')") Française
        #intro.full-section.content-section.text-center.centre-y
            .container
                h1(data-lang="title") Bespoke brand identity and web development
                p(data-lang="p1") From Olympic athletes to internationally accredited doctors to niche beer breweries.
                p(data-lang="p2") Tourmalet Media helps distinguished individuals and brands present themselves as such.
        // Design
        #design.double-page-section
            .double-page-parent
                .double-page-child.db-left
                    .container.text-center
                        .row
                            .col-md-4
                                img.mb-5.design-icon.row1(src="img/icons/mep.svg")
                            .col-md-4
                                img.mb-5.design-icon.row1(src="img/icons/hs.svg")
                            .col-md-4
                                img.mb-5.design-icon.row1(src="img/icons/im.svg")
                            .col-md-4
                                img.design-icon.row2(src="img/icons/bw.svg")
                            .col-md-4
                                img.design-icon.row2(src="img/icons/vl.svg")
                            .col-md-4
                                img.design-icon.row2(src="img/icons/dogma.svg")
                .double-page-child.db-right.text-center.centre-y
                    .container
                        h1 Bespoke brand identity and web development
                        p From Olympic athletes to internationally accredited doctors to niche beer breweries.
                        p Tourmalet Media helps distinguished individuals and brands present themselves as such.
        //Showcase
        section#showcase.centre-y
            .container-standard
                .cover.p-5
                    btn.btn-expand#btnViewProject.btn.btn-primary.pull-right Recent projects
                .carousel#carousel-showcase.slide.h-100(data-ride='carousel',data-interval="false")
                            // Indicators
                            ul.carousel-indicators
                                li.active(data-target='#carousel-showcase', data-slide-to='0')
                                li(data-target='#carousel-showcase', data-slide-to='1')
                                li(data-target='#carousel-showcase', data-slide-to='2')
                                li(data-target='#carousel-showcase', data-slide-to='3')
                                li(data-target='#carousel-showcase', data-slide-to='4')
                                li(data-target='#carousel-showcase', data-slide-to='5')
                            // The slideshow
                            .carousel-inner.h-100
                                #item1.carousel-item.active
                                    h4.w-50 Featured on the custom bike of Olympic Medalist, Henri Schoeman
                                #item2.carousel-item
                                #item3.carousel-item
                                    h4.w-50 Brand identity and design for Red Bull ambassador, Richard Murray
                                #item4.carousel-item
                                    h4.w-50 
                                #item5.carousel-item
                                    h4.w-50 Brand identity and design for The Nunez Hurley Academy
                                #item6.carousel-item
                                    h4.w-50
                                #item7.carousel-item
                                    h4.w-50 Web and design projects for 7 x triathlon world champion, Conrad Stoltz
                                #item8.carousel-item
                                #item9.carousel-item.centre-y
                                    .row
                                        .col-md-4.text-center
                                            a
                                                img.web-icon(src="img/previews/mca.png")
                                        .col-md-4.text-center
                                            a
                                                img.web-icon(src="img/previews/mca.png")
                                        .col-md-4.text-center
                                            a
                                                img.web-icon(src="img/previews/mca.png")
                            // Left and right controls
                            a.carousel-control-prev(href='#carousel-showcase', data-slide='prev')
                                span.carousel-control-prev-icon
                            a.carousel-control-next(href='#carousel-showcase', data-slide='next')
                                span.carousel-control-next-icon
        //Contact
        section#contact.centre-y
            .container.text-center
                img#contact-icon.d-inline(src="img/logo.svg")
                h1.d-inline.ml-2.ml-md-5 |
                a#contact-link(href="mailto:dehanlouw@icloud.com")
                    h2.d-inline.ml-2.ml-md-5 contact
        // Footer
        footer.footer.text-center
            .container-full
                a.text-muted.small.mb-0(href="mailto:dehanlouw@icloud.com") Copyright © Tourmalet Media 2018
        // Scroll to Top Button
        a.scroll-to-top.rounded.js-scroll-trigger(href="#page-top")
            i.fa.fa-angle-up
            
            

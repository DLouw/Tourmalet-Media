                                .front
                                    img.web-icon(src="img/previews/painclinic.png")
                                .back.centre-x
                                    img.web-icon(src="img/previews/mpainclinic.png")
                    .col-md-4.mb-5.mb-md-0
                        .flip-container
                            .flipper
                                .front
                                    img.web-icon(src="img/previews/mca.png")
                                .back.centre-x
                                    img.web-icon(src="img/previews/mmca.png")
                    .col-md-4.mb-5.mb-md-0
                        .flip-container
                            .flipper
                                .front
                                    img.web-icon(src="img/previews/cavemancafe.png")
                                .back.centre-x
                                    img.web-icon(src="img/previews/mcavemancafe.png")
        //Contact
        section#contact.text-center.pb-5
            img.d-inline(src="img/logo.svg")
            h1.d-inline.ml-5 |
            a(href="mailto:dehanlouw@icloud.com")
